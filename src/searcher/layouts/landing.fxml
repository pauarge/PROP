<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="searcher.controllers.LandingController" minHeight="400" minWidth="480"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="11" vgap="10">
    <Text text="Títol del programa"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          GridPane.halignment="CENTER"
          GridPane.columnSpan="11"
          style="-fx-font-family: Arial Black; -fx-font-size: 30; -fx-tile-alignment: center"
    />
    <HBox GridPane.columnIndex="3" GridPane.rowIndex="4">
        <Button fx:id="createGraph"
                text="Nova sessió"
                onAction="#openMain"/>
    </HBox>

    <HBox GridPane.columnIndex="5" GridPane.rowIndex="4">
        <Button fx:id="importGraph"
                text="Carregar sessió"
                onAction="#openDirSelector"/>
    </HBox>
    <HBox GridPane.columnIndex="7" GridPane.rowIndex="4">
        <Button text="Executar Shell"></Button>
    </HBox>
    <HBox GridPane.columnIndex="5" GridPane.rowIndex="6">
        <Button fx:id="closeButton"
                text="Sortir"
                onAction="#closeButtonAction"/>
    </HBox>
</GridPane>